<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <!-- Add your CSS link here -->
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      margin: 0;
      padding: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      color: #333;
    }

    .container {
      max-width: 900px;
      width: 100%;
      text-align: center;
      padding: 30px;
      border-radius: 15px;
      background-color: rgba(255, 255, 255, 0.95);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
      display: flex;
      flex-direction: column;
      align-items: center;
      margin: 20px;
    }

    .player-list-container, .created-sessions-container, .create-session-container {
      margin-top: 25px;
      background-color: rgba(255, 255, 255, 0.9);
      border-radius: 10px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      padding: 25px;
      display: none;
      width: 100%;
      max-width: 800px;
    }

    form {
      padding: 20px;
      margin: 20px 0;
      font-size: 16px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    form label {
      margin-bottom: 5px;
      font-weight: bold;
      color: #555;
    }

    form input, form select {
      width: 100%;
      max-width: 300px;
      padding: 10px;
      margin-bottom: 15px;
      border: 1px solid #ddd;
      border-radius: 5px;
      font-size: 16px;
      box-sizing: border-box;
    }

    form button {
      background-color: #4CAF50;
      color: white;
      padding: 12px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
      transition: background-color 0.3s;
      margin-top: 10px;
    }

    form button:hover {
      background-color: #45a049;
    }

    h1, h2 {
      margin-bottom: 25px;
      color: #333;
      font-weight: 300;
    }

    h1 {
      font-size: 36px;
    }

    h2 {
      font-size: 28px;
    }

    ul {
      list-style-type: none;
      padding: 0;
      width: 100%;
    }

    li {
      margin-bottom: 20px;
      padding: 15px;
      border-radius: 8px;
      background-color: #f9f9f9;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      transition: transform 0.2s;
    }

    li:hover {
      transform: translateY(-2px);
    }

    li button {
      background-color: #f44336;
      color: white;
      border: none;
      padding: 8px 12px;
      border-radius: 4px;
      cursor: pointer;
      font-size: 14px;
      margin-top: 10px;
      transition: background-color 0.3s;
    }

    li button:hover {
      background-color: #d32f2f;
    }

    strong {
      color: #2196F3;
      font-weight: bold;
    }

    .toggle-button {
      margin-top: 15px;
    }

    .toggle-button button {
      background-color: #2196F3;
      color: white;
      padding: 12px 24px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-size: 16px;
      transition: background-color 0.3s;
    }

    .toggle-button button:hover {
      background-color: #1976D2;
    }

    #column {
      display: flex;
      flex-direction: column;
      width: 100%;
      align-items: center;
    }

    a {
      text-decoration: none;
      color: white;
      background-color: #333;
      padding: 10px 20px;
      border-radius: 5px;
      font-size: 16px;
      transition: background-color 0.3s;
      margin-bottom: 20px;
    }

    a:hover {
      background-color: #555;
    }
  </style>
</head>
<body>
  <div class="container">
    
<div id="column">
  <h1>Welcome To The Admin Dashboard!</h1>
  <a href="/" style="background-color:#2c3e50 ;font-size: 20px;border-radius: 20px;color: aliceblue;padding: 3px;width: fit-content;">Signout</a>
    <!-- Player List Container -->
    <div class="player-list-container" id="playersContainer" style="display: none;">
      <h2>List of Players</h2>
      <ul>
        <% players.forEach(player => { %>
          <li>
            <strong>Name:</strong> <%= player.firstName %> <%= player.lastName %>, 
            <strong>Email:</strong> <%= player.email %>
          </li>
        <% }); %>
      </ul>
    </div>

    <!-- View Players Button -->
    <div class="toggle-button">
      <button onclick="toggleContainer('playersContainer')">View Players</button>
    </div>

    <!-- Create Session Container -->
    <div class="create-session-container" id="createSessionContainer" style="display: none;">
      <h2>Create Session</h2>
      <form action="/create-session" method="post">
        <label for="sportId">Sport:</label>
    <select name="sportId" id="sportId">
      <option value="1">basketball</option>
      <option value="2">football</option>
      <option value="3">cricket</option>
      <option value="4">volleyball</option>
    </select>
        <br>

        <label for="date">Date:</label>
        <input type="date" name="date" required>
        <br>

        <label for="time">Time:</label>
        <input type="time" name="time" required>
        <br>

        <label for="venue">Venue:</label>
        <input type="text" name="venue" required>
        <br>

        <button type="submit">Create Session</button>
      </form>
    </div>

    <!-- Create Session Button -->
    <div class="toggle-button">
      <button onclick="toggleContainer('createSessionContainer')">Create Session</button>
    </div>

    <!-- Created Sessions Container -->
    <div class="created-sessions-container" id="createdSessionsContainer" style="display: block;">
      <h2>Created Sessions</h2>
      <ul>
        <% sessions.forEach(session => { %>
          <li>
            <strong>Sport:</strong> <%= session.Sport.name %>, 
            <strong>Date:</strong> <%= session.date %>,
            <strong>Time:</strong> <%= session.time %>,
            <strong>Venue:</strong> <%= session.venue %>
            <button onclick="deleteSession('<%= session.id %>')">Delete</button>
          </li>
        <% }); %>
      </ul>
    </div>

    <!-- View Created Sessions Button -->
  </div>
</div>
  <script>
    function toggleContainer(containerId) {
      const container = document.getElementById(containerId);
      container.style.display = container.style.display === 'none' ? 'block' : 'none';
    }
    async function deleteSession(sessionId) {
      try {
        const response = await fetch(`/delete-session/${sessionId}`, {
          method: 'DELETE',
        });

        if (response.ok) {
          // Refresh the page or update the UI as needed
          location.reload();
        } else {
          console.error('Failed to delete session:', response.statusText);
        }
      } catch (error) {
        console.error('Error deleting session:', error.message);
      }
    }
  </script>
</body>
</html>
