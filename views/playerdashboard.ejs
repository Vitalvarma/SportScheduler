<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Player Dashboard</title>
  <!-- Add your CSS link here -->
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #a8e6cf 0%, #ffd3a5 100%);
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      color: #333;
    }

    .container {
      max-width: 900px;
      width: 100%;
      text-align: center;
      padding: 30px;
      border-radius: 15px;
      background-color: rgba(255, 255, 255, 0.95);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
      display: flex;
      flex-direction: column;
      align-items: center;
      margin: 20px;
    }

    .colleague-players-container, .admin-sessions-container {
      margin-top: 25px;
      background-color: rgba(255, 255, 255, 0.9);
      border-radius: 10px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      padding: 25px;
      width: 100%;
      max-width: 800px;
    }

    h1 {
      margin-bottom: 25px;
      font-size: 36px;
      font-weight: 300;
      color: #333;
    }

    h2 {
      margin-bottom: 25px;
      font-size: 28px;
      font-weight: 300;
      color: #333;
    }

    ul {
      list-style-type: none;
      padding: 0;
      width: 100%;
    }

    li {
      margin-bottom: 20px;
      padding: 15px;
      border-radius: 8px;
      background-color: #f9f9f9;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      transition: transform 0.2s;
    }

    li:hover {
      transform: translateY(-2px);
    }

    li button {
      background-color: #4CAF50;
      color: white;
      border: none;
      padding: 8px 12px;
      border-radius: 4px;
      cursor: pointer;
      font-size: 14px;
      margin-top: 10px;
      transition: background-color 0.3s;
    }

    li button:hover {
      background-color: #45a049;
    }

    strong {
      color: #FF9800;
      font-weight: bold;
    }

    .toggle-button {
      margin-top: 15px;
    }

    .toggle-button button {
      background-color: #FF9800;
      color: white;
      padding: 12px 24px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-size: 16px;
      transition: background-color 0.3s;
    }

    .toggle-button button:hover {
      background-color: #F57C00;
    }

    a {
      text-decoration: none;
      color: white;
      background-color: #333;
      padding: 10px 20px;
      border-radius: 5px;
      font-size: 16px;
      transition: background-color 0.3s;
      margin-bottom: 20px;
      position: relative;
      top: -20px;
      right: -20px;
      align-self: flex-end;
    }

    a:hover {
      background-color: #555;
    }

    @media (max-width: 768px) {
      .container {
        padding: 20px;
      }

      h1 {
        font-size: 28px;
      }

      h2 {
        font-size: 24px;
      }
    }
  </style>
</head>
<body>
    <a href="/" style="padding: 10px; font-size: 30px;background-color: darkolivegreen;color: aliceblue;width: fit-content;border-radius: 50px;position: relative;bottom: 300px;right: 80px;">Signout</a>
  <div class="container">
    <h1>Welcome to the Player Dashboard!</h1>
    
    <!-- Colleague Players Container -->
    <div class="colleague-players-container" id="colleaguePlayersContainer" style="display: none;">
      <h2>Co-Players</h2>
      <ul>
        <% colleaguePlayers.forEach(player => { %>
          <li>
            <strong>Name:</strong> <%= player.firstName %> <%= player.lastName %>, 
            <strong>Email:</strong> <%= player.email %>
          </li>
        <% }); %>
      </ul>
    </div>

    <!-- View Colleague Players Button -->
    <div class="toggle-button">
      <button onclick="toggleContainer('colleaguePlayersContainer')">View Co-Players</button>
    </div>

    <!-- Admin Sessions Container -->
    <div class="admin-sessions-container" id="adminSessionsContainer">
      <h2>Upcoming Sessions</h2>
      <ul>
        <% adminSessions.forEach(session => { %>
          <li>
            <strong>Sport:</strong> <%= session.Sport.name %>, 
            <strong>Date:</strong> <%= session.date %>,
            <strong>Time:</strong> <%= session.time %>,
            <strong>Venue:</strong> <%= session.venue %>
            <button onclick="joinSession('<%= session.id %>')" id="joinButton_<%= session.id %>">Join Session</button>
          </li>
        <% }); %>
      </ul>
    </div>

    <!-- View Admin Sessions Button -->
    <div class="toggle-button">
      <button onclick="toggleContainer('adminSessionsContainer')">View Admin Sessions</button>
    </div>
  </div>

  <script>
    function toggleContainer(containerId) {
      const container = document.getElementById(containerId);
      container.style.display = container.style.display === 'none' ? 'block' : 'none';
    }
    async function joinSession(sessionId) {
      const joinButton = document.getElementById(`joinButton_${sessionId}`);

      try {
        // You can add any background logic here if needed

        // Change the button text and disable it (for visual effect)
        joinButton.textContent = 'Joined';
        joinButton.disabled = true;
      } catch (error) {
        console.error('Error joining session:', error.message);
      }
    }
  </script>
</body>
</html>
