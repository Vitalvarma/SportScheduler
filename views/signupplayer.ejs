<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Player Sign Up</title>
  <link rel="stylesheet" href="styles.css">
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #a8e6cf 0%, #ffd3a5 100%);
      margin: 0;
      padding: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      color: #333;
    }

    .container {
      max-width: 450px;
      width: 100%;
      margin: 20px;
      background-color: rgba(255, 255, 255, 0.95);
      padding: 40px;
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
      border-radius: 15px;
      text-align: center;
      transition: transform 0.3s;
    }

    .container:hover {
      transform: translateY(-5px);
    }

    h1 {
      text-align: center;
      color: #333;
      margin-bottom: 30px;
      font-size: 32px;
      font-weight: 300;
    }

    form {
      display: flex;
      flex-direction: column;
    }

    label {
      margin-top: 15px;
      margin-bottom: 5px;
      color: #555;
      font-weight: bold;
      text-align: left;
    }

    input {
      padding: 12px;
      margin-bottom: 20px;
      border: 1px solid #ddd;
      border-radius: 8px;
      box-sizing: border-box;
      width: 100%;
      font-size: 16px;
      transition: border-color 0.3s;
    }

    input:focus {
      outline: none;
      border-color: #a8e6cf;
      box-shadow: 0 0 5px rgba(168, 230, 207, 0.5);
    }

    button {
      background-color: #a8e6cf;
      color: #333;
      padding: 12px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 16px;
      font-weight: bold;
      transition: background-color 0.3s, transform 0.2s;
      margin: 5px;
    }

    button:hover {
      background-color: #81d4c7;
      transform: translateY(-2px);
    }

    #notification {
      display: none;
      background-color: #48bb78;
      color: #fff;
      text-align: center;
      padding: 12px;
      margin-top: 15px;
      border-radius: 8px;
      font-weight: bold;
    }

    a {
      text-decoration: none;
      color: #a8e6cf;
      font-weight: bold;
      display: inline-block;
      margin-top: 10px;
    }

    a:hover {
      text-decoration: underline;
    }

    @media (max-width: 480px) {
      .container {
        padding: 30px 20px;
      }

      h1 {
        font-size: 28px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Player Sign Up</h1>
    <form id="playerSignupForm" action="/create-player" method="post">
      <!-- EJS syntax for generating dynamic input names -->
      <label for="playerFirstName">First Name:</label>
      <input type="text" id="playerFirstName" name="firstName" required>
      
      <label for="playerLastName">Last Name:</label>
      <input type="text" id="playerLastName" name="lastName" required>

      <label for="playerEmail">Email:</label>
      <input type="email" id="playerEmail" name="email" required>

      <label for="playerPassword">Password:</label>
      <input type="password" id="playerPassword" name="password" required>

      <button type="submit" id="playerSignupBtn">Sign Up</button>
      <a href="/"><button type="button">Player Login</button></a>
    </form>
    <div id="notification" class="hidden">You are registered!</div>
  </div>
  
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const playerSignupForm = document.getElementById('playerSignupForm');
      const notification = document.getElementById('notification');

      playerSignupForm.addEventListener('submit', async function (event) {
        event.preventDefault();

        try {
          // Implement player signup logic using AJAX or fetch API
          const response = await fetch('/create-player', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              firstName: document.getElementById('playerFirstName').value,
              lastName: document.getElementById('playerLastName').value,
              email: document.getElementById('playerEmail').value,
              password: document.getElementById('playerPassword').value,
            }),
          });

          if (response.ok) {
            // Clear form fields
            playerSignupForm.reset();
            // Show success notification
            notification.style.display = 'block';
          } else {
            // Handle other response status codes
            console.error('Error:', response.statusText);
          }
        } catch (error) {
          console.error('Error:', error.message);
        }
      });
    });
  </script>
</body>
</html>
