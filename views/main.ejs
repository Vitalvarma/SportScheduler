<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login Page</title>
  <!-- Add your CSS link here -->
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      color: #333;
    }

    #head {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      background-color: rgba(255, 255, 255, 0.9);
      border-radius: 20px;
      padding: 30px;
      margin-bottom: 40px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 600px;
      text-align: center;
    }

    #head h1 {
      margin: 5px 0;
      font-size: 48px;
      font-weight: 300;
      color: #2d3436;
    }

    .container {
      display: flex;
      flex-direction: row;
      justify-content: space-around;
      align-items: flex-start;
      width: 100%;
      max-width: 1000px;
      padding: 20px;
      gap: 40px;
    }

    .form-container {
      background-color: rgba(255, 255, 255, 0.95);
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      padding: 30px;
      width: 100%;
      max-width: 400px;
      text-align: center;
      transition: transform 0.3s;
    }

    .form-container:hover {
      transform: translateY(-5px);
    }

    .form-container h2 {
      margin-bottom: 20px;
      color: #2d3436;
      font-size: 24px;
      font-weight: 300;
    }

    label {
      display: block;
      margin-bottom: 8px;
      font-weight: bold;
      color: #555;
      text-align: left;
    }

    input {
      width: 100%;
      padding: 12px;
      margin-bottom: 20px;
      border: 1px solid #ddd;
      border-radius: 8px;
      box-sizing: border-box;
      font-size: 16px;
      transition: border-color 0.3s;
    }

    input:focus {
      outline: none;
      border-color: #74b9ff;
      box-shadow: 0 0 5px rgba(116, 185, 255, 0.5);
    }

    button {
      background-color: #0984e3;
      color: #fff;
      padding: 12px 20px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 16px;
      font-weight: bold;
      transition: background-color 0.3s, transform 0.2s;
      width: 100%;
      margin-bottom: 10px;
    }

    button:hover {
      background-color: #0652a0;
      transform: translateY(-2px);
    }

    p {
      margin-top: 15px;
      font-size: 14px;
    }

    a {
      color: #0984e3;
      text-decoration: none;
      font-weight: bold;
    }

    a:hover {
      text-decoration: underline;
    }

    @media (max-width: 768px) {
      .container {
        flex-direction: column;
        align-items: center;
        gap: 20px;
      }

      #head h1 {
        font-size: 36px;
      }
    }
  </style>
</head>
<body>
  <div id="head">
    <h1>Welcome To The </h1>
    <h1>Sports</h1>
    <h1> Scheduler </h1>
    <h1>App!</h1>
  </div>
  <div class="container">
    <!-- Player Login/Signup Form -->
    <div class="form-container">
      <h2>Player Login</h2>
      <form id="playerForm" action="/login-player" method="post">
        <label for="playerEmail">Email:</label>
        <input type="email" id="playerEmail" name="email" required>
        <label for="playerPassword">Password:</label>
        <input type="password" id="playerPassword" name="password" required>
        <input type="submit" id="playerLoginBtn" value="Login">
        <p>Don't have an account yet? <br><a href="/signupplayer">Sign Up</a></p>
      </form>
    </div>

    <!-- Admin Login/Signup Form -->
    <div class="form-container">
      <h2>Admin Login</h2>
      <form id="adminForm" action="/login-admin" method="post">
        <label for="adminEmail">Email:</label>
        <input type="email" id="adminEmail" name="email" required>
        <label for="adminPassword">Password:</label>
        <input type="password" id="adminPassword" name="password" required>
        <input type="submit" id="adminLoginBtn" value="Login">
        <p>Don't have an account yet? <br><a href="/signupadmin">Sign Up</a></p>
      </form>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      // Player Login/Signup Form
      const playerForm = document.getElementById('playerForm');
      playerForm.addEventListener('submit', async function (event) {
        event.preventDefault();
        // Implement player login/signup logic using AJAX or fetch API
        // Redirect to player dashboard or show error messages accordingly
        try {
          const response = await fetch('/login-player', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              email: document.getElementById('playerEmail').value,
              password: document.getElementById('playerPassword').value,
            }),
          });

          if (response.ok) {
            // Redirect to player dashboard
            window.location.href = '/playerdashboard';
          } else {
            // Handle login error
            console.error('Login error:', response.statusText);
          }
        } catch (error) {
          console.error('Error:', error.message);
        }
      });

      // Admin Login/Signup Form
      const adminForm = document.getElementById('adminForm');
      adminForm.addEventListener('submit', async function (event) {
        event.preventDefault();
        // Implement admin login/signup logic using AJAX or fetch API
        // Redirect to admin dashboard or show error messages accordingly
        try {
          const response = await fetch('/login-admin', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              email: document.getElementById('adminEmail').value,
              password: document.getElementById('adminPassword').value,
            }),
          });

          if (response.ok) {
            // Redirect to admin dashboard
            window.location.href = '/admindashboard';
          } else {
            // Handle login error
            console.error('Login error:', response.statusText);
          }
        } catch (error) {
          console.error('Error:', error.message);
        }
      });
    });
  </script>
</body>
</html>
